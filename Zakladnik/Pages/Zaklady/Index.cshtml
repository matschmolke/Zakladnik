@page
@model Zakladnik.Pages.Zaklady.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista zakładów</h1>

<hr />
<p>
    <a class="btn btn-info" asp-page="Create">Dodaj nowy zakład</a>
</p>

<hr />
<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input name="filtrBukmacher" value="@Model.FiltrBukmacher" class="form-control" placeholder="Szukaj bukmachera..." />
    </div>
    <div class="col-md-4">
        <select name="filtrStatus" class="form-select">
            <option value="">-- Wszystkie --</option>
            <option value="Wygrany" selected="@(Model.FiltrStatus == "Wygrany")">Wygrane</option>
            <option value="Przegrany" selected="@(Model.FiltrStatus == "Przegrany")">Przegrane</option>
            <option value="Nierozliczony" selected="@(Model.FiltrStatus == "Nierozliczony")">Nierozliczone</option>
        </select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-info">Filtruj</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Wyczyść</a>
    </div>
</form>

<div class="alert @(Model.Bilans >= 0 ? "alert-success" : "alert-danger")">
    <strong>Bilans:</strong> @Model.Bilans.ToString("0.00") zł
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Bukmacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Stawka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Kurs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Wygrany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Podatek)
            </th>
            <th>Potencjalna wygrana</th>
            <th>Faktyczna wygrana</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Zaklad) {
        <tr>
            <td>
                 @item.Data.ToString("dd.MM.yyyy HH:mm")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bukmacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stawka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kurs)
            </td>
            <td>
                @if (!item.Rozliczony)
                {
                    <span class="badge bg-secondary">Oczekuje ⏳</span>
                }
                else if (item.Wygrany)
                {
                    <span class="badge bg-success">Wygrany ✅</span>
                }
                else
                {
                    <span class="badge bg-danger">Przegrany ❌</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Podatek)
            </td>
            <td>
                @item.PotencjalnaWygrana
            </td>
            <td>
                @item.FaktycznaWygrana
            </td>
            <td>
                <a class="btn btn-sm btn-info" asp-page="./Edit" asp-route-id="@item.Id">Edytuj</a>
                <!-- usunięto link do szczegółów -->
                <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
