@page
@model Zakladnik.Pages.Zaklady.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Bukmacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Stawka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Kurs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Wygrany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zaklad[0].Podatek)
            </th>
            <th>Potencjalna wygrana</th>
            <th>Faktyczna wygrana</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Zaklad) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bukmacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stawka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kurs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wygrany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Podatek)
            </td>
            <td>
                @item.PotencjalnaWygrana
            </td>
            <td>
                @item.FaktycznaWygrana
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
